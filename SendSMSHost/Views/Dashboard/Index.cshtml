
@{
    ViewBag.Title = "Index";
}

<article id="app" class="row" v-cloak>
    <header class="col-md-6">
        <h3>
            {{ message }}
        </h3>
    </header>

    <div>
        <bar-chart :chart-data="graph1_data" :options="graph1_options"></bar-chart>
    </div>

</article>

@section scripts{
    <script src="~/Scripts/vue.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.1/Chart.min.js"></script>
    <script src="https://unpkg.com/vue-chartjs/dist/vue-chartjs.min.js"></script>

    <!--Reference to Vue code -->
    <script src="~/ViewModels/Dashboard/App.js"></script>

    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.2.2.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!--SignalR connection script-->
    <script src="~/SignalR/SignalR-ServerSentEvents.js"></script>
    <!--SignalR script with page-specific methods.-->
    <script src="~/ViewModels/Dashboard/SignalR.js"></script>
}

