
@{
    ViewBag.Title = "Index";
}

<article id="app" class="row" v-cloak>
    <header class="row">
        <div class="h3 col-sm-2">
            {{ message }}
        </div>
        <div class="h3">
            <input type="checkbox" class="form-check-input h6" v-model="includeDeleted">
            <span class="h6">Include deleted?</span>
        </div>
    </header>

    <div class="row">
        <div class="h4">Forever</div>
        <bar-chart :chart-data="foreverGraph_data" :options="weekGraph_options"></bar-chart>
    </div>

    <div class="row">
        <div class="h4">Week</div>
        <bar-chart :chart-data="weekGraph_data" :options="weekGraph_options"></bar-chart>
    </div>

    <div class="row">
        <div class="h4">Day</div>
        <bar-chart :chart-data="dayGraph_data" :options="weekGraph_options"></bar-chart>
    </div>

    <div class="row">
        <div class="h4">Hour</div>
        <bar-chart :chart-data="hourGraph_data" :options="weekGraph_options"></bar-chart>
    </div>

</article>

@section scripts{
    <script src="~/Scripts/vue.js"></script>
    <script src="~/Scripts/Chart-2.7.1.min.js"></script>
    <script src="~/Scripts/Vue-ChartJs-3.3.1.min.js"></script>

    @*<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.1/Chart.min.js"></script>
        <script src="https://unpkg.com/vue-chartjs/dist/vue-chartjs.min.js"></script>*@



    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.2.3.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!--SignalR script with page-specific methods.-->
    <script src="~/ViewModels/Dashboard/SignalR.js"></script>

    <!--Reference to page-specific Vue code -->
    <script src="~/ViewModels/Dashboard/App.js"></script>
}

