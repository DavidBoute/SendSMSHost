
@{
    ViewBag.Title = "Index";
}

<article id="app" class="row" v-cloak>
    <header class="row">
        <div class="h3 col-sm-2">
            {{ message }}
        </div>
        <div class="h3 col-sm-2">
            <input type="checkbox" class="form-check-input h6" v-model="includeDeleted">
            <span class="h6">Include deleted?</span>
        </div>
        <button class="h3 btn btn-danger btn-sm pull-right" style="margin-right: 15px; margin-bottom: 5px;" v-on:click="clearLogs">Wis logs</button>
    </header>

    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="panel-title">
                    <a data-toggle="collapse" class="h4" role="button" aria-expanded="false" data-target="#collapseForever" aria-controls="#collapseForever">
                        <span class="pull-left title-sidebar">Forever</span>
                        <span class="pull-right glyphicon glyphicon-resize-small"></span>
                        <span class="pull-right glyphicon glyphicon-resize-full"></span>
                        <div class="clearfix"></div>
                    </a>
                </div>
            </div>
            <div id="collapseForever" class="panel-collapse collapse">
                <pie-chart :chart-data="foreverGraph_data" :options="barGraph_options" class="chart"></pie-chart>
            </div>
        </div>
    </div>

    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="panel-title">
                    <a data-toggle="collapse" class="h4" role="button" aria-expanded="false" data-target="#collapseWeek" aria-controls="#collapseWeek">
                        <span class="pull-left title-sidebar">Week</span>
                        <span class="pull-right glyphicon glyphicon-resize-small"></span>
                        <span class="pull-right glyphicon glyphicon-resize-full"></span>
                        <div class="clearfix"></div>
                    </a>
                </div>
            </div>
            <div id="collapseWeek" class="panel-collapse collapse">
                <bar-chart :chart-data="weekGraph_data" :options="barGraph_options" class="chart"></bar-chart>
            </div>
        </div>
    </div>

    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="panel-title">
                    <a data-toggle="collapse" class="h4" role="button" aria-expanded="false" data-target="#collapseDay" aria-controls="#collapseDay">
                        <span class="pull-left title-sidebar">Day</span>
                        <span class="pull-right glyphicon glyphicon-resize-small"></span>
                        <span class="pull-right glyphicon glyphicon-resize-full"></span>
                        <div class="clearfix"></div>
                    </a>
                </div>
            </div>
            <div id="collapseDay" class="panel-collapse collapse">
                <bar-chart :chart-data="dayGraph_data" :options="barGraph_options" class="chart"></bar-chart>
            </div>
        </div>
    </div>

    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="panel-title">
                    <a data-toggle="collapse" class="h4" role="button" aria-expanded="false" data-target="#collapseHour" aria-controls="#collapseHour">
                        <span class="pull-left title-sidebar">Hour</span>
                        <span class="pull-right glyphicon glyphicon-resize-small"></span>
                        <span class="pull-right glyphicon glyphicon-resize-full"></span>
                        <div class="clearfix"></div>
                    </a>
                </div>
            </div>
            <div id="collapseHour" class="panel-collapse collapse">
                <bar-chart :chart-data="hourGraph_data" :options="barGraph_options" class="chart"></bar-chart>
            </div>
        </div>
    </div>

</article>

@section scripts{
    <script src="~/Scripts/vue.js"></script>
    <script src="~/Scripts/Chart-2.7.1.min.js"></script>
    <script src="~/Scripts/Vue-ChartJs-3.3.1.min.js"></script>

    @*<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.1/Chart.min.js"></script>
        <script src="https://unpkg.com/vue-chartjs/dist/vue-chartjs.min.js"></script>*@



    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.2.3.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!--SignalR script with page-specific methods.-->
    <script src="~/ViewModels/Dashboard/SignalR.js"></script>

    <!--Reference to page-specific Vue code -->
    <script src="~/ViewModels/Dashboard/App.js"></script>
}

